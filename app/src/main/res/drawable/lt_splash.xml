<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item><shape><solid android:color="@color/purple_40"/></shape></item>

    <item android:gravity="center" android:width="70dp" android:height="70dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <stroke android:width="1dp" android:color="#38BDF8"/>
                <corners android:radius="20dp"/>
            </shape>
        </rotate>
    </item>

    <item android:gravity="center" android:width="45dp" android:height="45dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <stroke android:width="3dp" android:color="#38BDF8"/>
                <corners android:radius="10dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>